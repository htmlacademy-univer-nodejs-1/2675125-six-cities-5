{
  "name": "six-cities",
  "version": "4.0.0",
  "description": "Проект «Шесть городов» от HTML Academy",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "main.js",
  "scripts": {
    "start": "npm run build && node ./dist/main.rest.js",
    "start:dev": "npm run ts ./src/main.rest.ts | pino-pretty --colorize --translateTime SYS:standard",
    "start-server": "json-server ./mocks/mock-server-data.json --port 3123",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "ts": "ts-node"
  },
  "devDependencies": {
    "@types/convict": "6.1.4",
    "@types/convict-format-with-validator": "6.0.3",
    "@types/express": "4.17.18",
    "@types/node": "18.16.3",
    "@typescript-eslint/eslint-plugin": "5.46.0",
    "@typescript-eslint/parser": "5.46.0",
    "convict": "^6.2.4",
    "convict-format-with-validator": "^6.2.0",
    "eslint": "8.39.0",
    "eslint-config-htmlacademy": "9.1.1",
    "got": "^12.6.1",
    "inversify": "6.0.1",
    "json-server": "^1.0.0-beta.3",
    "pino-pretty": "^13.1.3",
    "rimraf": "3.0.2",
    "ts-node": "10.9.1",
    "typescript": "4.9.5"
  },
  "type": "module",
  "engines": {
    "node": "^18.0.0",
    "npm": ">=8"
  },
  "dependencies": {
    "@typegoose/typegoose": "^11.6.0",
    "chalk": "^5.6.2",
    "class-transformer": "^0.5.1",
    "convict": "^6.2.4",
    "convict-format-with-validator": "^6.2.0",
    "dotenv": "^17.2.3",
    "express": "4.18.2",
    "express-async-handler": "^1.2.0",
    "http-status-codes": "^2.3.0",
    "mongoose": "^7.6.0",
    "pino": "^10.1.0",
    "reflect-metadata": "^0.2.2"
  }
}
